/* pages/search/search.wxss */
@import "../common/SearchBar/SearchBar.wxss";

.search_view {
  width: 100%;
  height: 130rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.list_item {
  display: flex;
  flex-direction: row;
  position: relative;
  width: 100%;
  height: 100rpx;
  align-items: center;
}

.list_item .item_type {
  position: relative;
  width: 50rpx;
  /*height: 30rpx;*/
  margin-left: 50rpx;
  border-style: solid;
  border-radius: 6rpx;
  border-width: 1rpx;
  padding: 6rpx;
  text-align: center;
  /*line-height: 30rpx;*/
}


.list_item .item_name {
  position: relative;
  margin-left: 60rpx;
  width: 300rpx;
}

.list_item .item_code {
  position: relative;
  margin-left: 30rpx;
  width: 160rpx;
}

.list_item image {
  position: absolute;
  width: 44rpx;
  height: 100%;
  right: 50rpx;
}

.container_h-header {
  position: relative;
  padding-left: 24rpx;
  padding-right: 24rpx;
  width: 100%;
  height: 80rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #e4e4e4;
  border-top: 1rpx solid #e4e4e4;
}

.optional-header-sortlable_left {
  position: relative;
  display: inline-block;
  width: 34%;
  height: 100%;
  line-height: 80rpx;
  margin-left: 150rpx;
  text-align: left;
  align-content: left;
}

.optional-header-sortlable_center {
  position: relative;
  display: inline-block;
  width: 33%;
  height: 100%;
  line-height: 80rpx;
  text-align: center;
}

.optional-header-sortlable_right {
  position: relative;
  display: inline-block;
  width: 33%;
  height: 100%;
  line-height: 70rpx;
  text-align: right;
}
